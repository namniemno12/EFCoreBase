<Window x:Class="UI.RegisterWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Register Account" 
        Height="750" 
        Width="500"
        WindowStartupLocation="CenterScreen"
 ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
     <!-- Premium Button Style -->
        <Style x:Key="PremiumButton" TargetType="Button">
        <Setter Property="Background">
        <Setter.Value>
  <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
         <GradientStop Color="#667eea" Offset="0"/>
        <GradientStop Color="#764ba2" Offset="1"/>
           </LinearGradientBrush>
      </Setter.Value>
     </Setter>
  <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
       <Setter Property="FontWeight" Value="SemiBold"/>
  <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
     <Setter.Value>
  <ControlTemplate TargetType="Button">
         <Border Background="{TemplateBinding Background}"
         CornerRadius="12"
           Padding="{TemplateBinding Padding}">
             <ContentPresenter HorizontalAlignment="Center" 
          VerticalAlignment="Center"/>
      </Border>
   </ControlTemplate>
        </Setter.Value>
            </Setter>
         <Style.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
  <Setter Property="Opacity" Value="0.9"/>
         </Trigger>
     <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.5"/>
        </Trigger>
            </Style.Triggers>
        </Style>

  <!-- Glass TextBox Style -->
        <Style x:Key="GlassTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
       <Setter Property="Foreground" Value="#333333"/>
          <Setter Property="BorderBrush" Value="#E0E0E0"/>
<Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="45,14"/>
            <Setter Property="FontSize" Value="15"/>
      <Setter Property="CaretBrush" Value="#667eea"/>
    <Setter Property="Template">
                <Setter.Value>
          <ControlTemplate TargetType="TextBox">
  <Border Background="{TemplateBinding Background}"
       BorderBrush="{TemplateBinding BorderBrush}"
   BorderThickness="{TemplateBinding BorderThickness}"
  CornerRadius="10">
<ScrollViewer x:Name="PART_ContentHost"
        Margin="{TemplateBinding Padding}"
  VerticalAlignment="Center"/>
             </Border>
          </ControlTemplate>
           </Setter.Value>
  </Setter>
  <Style.Triggers>
        <Trigger Property="IsFocused" Value="True">
     <Setter Property="BorderBrush" Value="#667eea"/>
<Setter Property="BorderThickness" Value="2"/>
   </Trigger>
         </Style.Triggers>
  </Style>

        <!-- Glass PasswordBox Style -->
<Style x:Key="GlassPasswordBox" TargetType="PasswordBox">
 <Setter Property="Background" Value="White"/>
      <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
   <Setter Property="BorderThickness" Value="1"/>
 <Setter Property="Padding" Value="45,14"/>
            <Setter Property="FontSize" Value="15"/>
 <Setter Property="CaretBrush" Value="#667eea"/>
     <Setter Property="Template">
           <Setter.Value>
  <ControlTemplate TargetType="PasswordBox">
             <Border Background="{TemplateBinding Background}"
          BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
          CornerRadius="10">
     <ScrollViewer x:Name="PART_ContentHost"
          Margin="{TemplateBinding Padding}"
               VerticalAlignment="Center"/>
        </Border>
           </ControlTemplate>
      </Setter.Value>
            </Setter>
            <Style.Triggers>
        <Trigger Property="IsFocused" Value="True">
             <Setter Property="BorderBrush" Value="#667eea"/>
    <Setter Property="BorderThickness" Value="2"/>
       </Trigger>
  </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="25">
      <Border.Effect>
   <DropShadowEffect Color="#000000" Opacity="0.6" BlurRadius="40" ShadowDepth="0"/>
   </Border.Effect>

        <Grid>
        <!-- Gradient Background -->
       <Border CornerRadius="25">
   <Border.Background>
             <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
     <GradientStop Color="#667eea" Offset="0"/>
      <GradientStop Color="#764ba2" Offset="0.5"/>
         <GradientStop Color="#f093fb" Offset="1"/>
           </LinearGradientBrush>
        </Border.Background>
        </Border>

            <!-- Main Content -->
            <Grid Margin="45,35">
  <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
   </Grid.RowDefinitions>

    <!-- Close Button -->
            <Button Content="?" 
      HorizontalAlignment="Right" 
VerticalAlignment="Top"
  Width="40" 
     Height="40"
         Background="Transparent"
          Foreground="White"
      BorderThickness="0"
   FontSize="22"
            FontWeight="Bold"
     Cursor="Hand"
       Margin="0,-5,-5,0"
    Click="CloseButton_Click">
   <Button.Style>
                 <Style TargetType="Button">
     <Setter Property="Template">
       <Setter.Value>
         <ControlTemplate TargetType="Button">
   <Border Background="{TemplateBinding Background}"
   CornerRadius="20">
  <ContentPresenter HorizontalAlignment="Center" 
        VerticalAlignment="Center"/>
       </Border>
         </ControlTemplate>
      </Setter.Value>
      </Setter>
              <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
       <Setter Property="Background" Value="#30FFFFFF"/>
       </Trigger>
       </Style.Triggers>
      </Style>
           </Button.Style>
       </Button>

     <!-- Form Content -->
     <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel VerticalAlignment="Center">

              <!-- Logo & Title Section -->
          <StackPanel Margin="0,0,0,30">
      <!-- User Icon -->
       <Grid Width="90" Height="90" Margin="0,0,0,20">
      <Ellipse Fill="#30FFFFFF">
       <Ellipse.Effect>
  <BlurEffect Radius="15"/>
 </Ellipse.Effect>
        </Ellipse>
   <Ellipse Fill="White" Width="80" Height="80">
      <Ellipse.Effect>
      <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
          </Ellipse.Effect>
           </Ellipse>

     <TextBlock Text="??" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                 </Grid>

     <TextBlock Text="Create Account" 
                FontSize="32" 
          FontWeight="Bold" 
            Foreground="White"
          HorizontalAlignment="Center"
        Margin="0,0,0,8">
  <TextBlock.Effect>
         <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="2"/>
 </TextBlock.Effect>
</TextBlock>

          <TextBlock Text="Join our secure system today" 
      FontSize="14" 
           Foreground="#E0E0E0"
   HorizontalAlignment="Center"
     FontWeight="Light"/>
   </StackPanel>

      <!-- Registration Form Glass Card -->
     <Border Background="#25FFFFFF" 
             CornerRadius="20"
           Padding="35,30"
          Margin="0,0,0,25">
         <Border.Effect>
<DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="0"/>
         </Border.Effect>

         <StackPanel>
   <!-- Username Field -->
       <TextBlock Text="USERNAME *" 
        FontSize="11" 
FontWeight="SemiBold"
        Foreground="White" 
            Margin="5,0,0,10"
        Opacity="0.9"/>

   <Grid Margin="0,0,0,18">
      <Border CornerRadius="10">
    <Border.Effect>
             <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="0"/>
   </Border.Effect>
          </Border>

     <TextBox x:Name="UsernameTextBox"
     Style="{StaticResource GlassTextBox}"/>

        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
      Fill="#999999"
 Width="20" 
        Height="20"
 Stretch="Uniform"
           VerticalAlignment="Center"
        HorizontalAlignment="Left"
         Margin="15,0,0,0"
            IsHitTestVisible="False"/>
     </Grid>

       <!-- Email Field -->
     <TextBlock Text="EMAIL *" 
         FontSize="11" 
           FontWeight="SemiBold"
             Foreground="White" 
            Margin="5,0,0,10"
           Opacity="0.9"/>

                   <Grid Margin="0,0,0,18">
       <Border CornerRadius="10">
         <Border.Effect>
         <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="0"/>
      </Border.Effect>
            </Border>

                  <TextBox x:Name="EmailTextBox"
              Style="{StaticResource GlassTextBox}"/>

       <Path Data="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"
  Fill="#999999"
          Width="20" 
   Height="20"
      Stretch="Uniform"
                VerticalAlignment="Center"
       HorizontalAlignment="Left"
      Margin="15,0,0,0"
    IsHitTestVisible="False"/>
    </Grid>

         <!-- Password Field -->
      <TextBlock Text="PASSWORD *" 
        FontSize="11" 
      FontWeight="SemiBold"
      Foreground="White" 
        Margin="5,0,0,10"
           Opacity="0.9"/>

             <Grid Margin="0,0,0,18">
    <Border CornerRadius="10">
         <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="0"/>
 </Border.Effect>
    </Border>

               <PasswordBox x:Name="PasswordBox"
      Style="{StaticResource GlassPasswordBox}"/>

   <Path Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"
      Fill="#999999"
    Width="20" 
             Height="20"
   Stretch="Uniform"
            VerticalAlignment="Center"
     HorizontalAlignment="Left"
      Margin="15,0,0,0"
     IsHitTestVisible="False"/>
 </Grid>

    <!-- Full Name Field -->
   <TextBlock Text="FULL NAME (Optional)" 
   FontSize="11" 
          FontWeight="SemiBold"
   Foreground="White" 
     Margin="5,0,0,10"
    Opacity="0.9"/>

     <Grid Margin="0,0,0,18">
       <Border CornerRadius="10">
        <Border.Effect>
          <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="0"/>
            </Border.Effect>
     </Border>

     <TextBox x:Name="FullNameTextBox"
       Style="{StaticResource GlassTextBox}"/>

          <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
    Fill="#999999"
       Width="20" 
Height="20"
   Stretch="Uniform"
           VerticalAlignment="Center"
     HorizontalAlignment="Left"
   Margin="15,0,0,0"
            IsHitTestVisible="False"/>
        </Grid>

      <!-- Phone Number Field -->
       <TextBlock Text="PHONE NUMBER (Optional)" 
       FontSize="11" 
          FontWeight="SemiBold"
Foreground="White" 
      Margin="5,0,0,10"
   Opacity="0.9"/>

          <Grid Margin="0,0,0,18">
           <Border CornerRadius="10">
             <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="0"/>
    </Border.Effect>
     </Border>

        <TextBox x:Name="PhoneNumberTextBox"
        Style="{StaticResource GlassTextBox}"/>

          <Path Data="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z"
     Fill="#999999"
       Width="20" 
    Height="20"
       Stretch="Uniform"
  VerticalAlignment="Center"
         HorizontalAlignment="Left"
              Margin="15,0,0,0"
    IsHitTestVisible="False"/>
  </Grid>

    <!-- Address Field -->
        <TextBlock Text="ADDRESS (Optional)" 
           FontSize="11" 
  FontWeight="SemiBold"
 Foreground="White" 
      Margin="5,0,0,10"
    Opacity="0.9"/>

     <Grid Margin="0,0,0,22">
  <Border CornerRadius="10">
      <Border.Effect>
       <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="0"/>
          </Border.Effect>
         </Border>

          <TextBox x:Name="AddressTextBox"
           Style="{StaticResource GlassTextBox}"/>

  <Path Data="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z"
     Fill="#999999"
      Width="20" 
         Height="20"
   Stretch="Uniform"
             VerticalAlignment="Center"
   HorizontalAlignment="Left"
 Margin="15,0,0,0"
          IsHitTestVisible="False"/>
                    </Grid>

          <!-- Register Button -->
               <Button x:Name="RegisterButton"
  Content="REGISTER"
      Style="{StaticResource PremiumButton}"
 Height="54"
    FontSize="16"
        FontWeight="Bold"
              Click="RegisterButton_Click">
     <Button.Effect>
 <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="5"/>
         </Button.Effect>
            </Button>

        <!-- Status Message -->
           <Border Background="#30000000"
     CornerRadius="10"
     Padding="18,12"
      Margin="0,18,0,0"
Visibility="Collapsed"
       x:Name="StatusBorder">
         <TextBlock x:Name="StatusTextBlock"
          Text=""
       Foreground="White"
      FontSize="13"
        TextAlignment="Center"
  TextWrapping="Wrap"
          FontWeight="Medium"/>
    </Border>

      <!-- Back to Login Link -->
           <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                 <Run Text="Already have an account? " Foreground="White" FontSize="13"/>
      <Hyperlink Foreground="#FFD700" TextDecorations="None" Click="BackToLogin_Click">
         <Run Text="Login here" FontWeight="SemiBold"/>
         </Hyperlink>
  </TextBlock>
          </StackPanel>
  </Border>

         <!-- Footer -->
            <StackPanel Orientation="Horizontal"
        HorizontalAlignment="Center">
    <TextBlock Text="(c)" 
       FontSize="12" 
       Foreground="White"
          Opacity="0.6"
    Margin="0,0,5,0"/>
  <TextBlock Text="2024 Client System. All rights reserved." 
     FontSize="12" 
  Foreground="White"
  Opacity="0.6"/>
        </StackPanel>
      </StackPanel>
                </ScrollViewer>
      </Grid>
   </Grid>
    </Border>
</Window>
